{
    "compilerOptions": {
        "baseUrl": ".",
        "paths": {
            "*": ["./*"],
            "src/*": ["./src/*"]
        },
        "typeRoots": ["./types"],
        "types": [
            "node",
            "@wdio/sync",
            "chai",
            "@wdio/cucumber-framework",
            "reflect-metadata"
        ],
        "target": "es6",
        "lib": ["es2018", "dom"],
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "removeComments": true,
        "noImplicitAny": false,
        "outDir": "./tsrc"
    },
    "include": ["./src/**/*.ts"]
}
